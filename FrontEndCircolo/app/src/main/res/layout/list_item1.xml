<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Deleteidview"
        android:layout_width="15dp"
        android:layout_height="22dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Id"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Deletenomeview"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Nome Torneo"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Deleteidview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Deleteluogoview"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Luogo"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Deletenomeview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Deletedataview"
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Data/ora"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Deleteluogoview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Deleteturniview"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="N.T"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Deletedataview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Deleteturnoview"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="T"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Deleteturniview"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>